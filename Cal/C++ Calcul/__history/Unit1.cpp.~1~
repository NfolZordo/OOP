//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
    		   a=StrToFloat(Edit1->Text)   ;
		   b=StrToFloat(Edit2->Text)   ;
		{
		Edit3->Text = (a+b);
		}
		Edit1->Text = "" ;
		Edit2->Text = "" ;
}
//---------------------------------------------------------------------------

//---------------------------------------------------------------------------



//---------------------------------------------------------------------------



void __fastcall TForm1::Button16Click(TObject *Sender)
{
       		   a=StrToFloat(Edit1->Text)   ;
		   b=StrToFloat(Edit2->Text)   ;
		{
		Edit3->Text = (a-b);
		}
		Edit1->Text = "" ;
		Edit2->Text = "" ;
}
//---------------------------------------------------------------------------

